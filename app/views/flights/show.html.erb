<h2>
    Flight: <%= @flight.flight %>   
</h2>

<% if @current_user.present? && @current_user.id == @flight.user_id %>
<%= link_to 'Edit', edit_flight_path(@flight) %>
|
<%= link_to 'Delete', flight_path(@flight.id), method: 'delete' %>
<% end %>
<hr>

<table>
    <tr>
        <th>Date</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Plane</th>
        <th>Remaining Seats</th>
    </tr>
    
    <tr>
            
            <td><%= @flight.departure_date %></td>
            <td><%= @flight.origin %></td>
            <td><%= @flight.destination %></td>
            <td><%= @flight.plane_id %></td>
            <td><%= @flight.seats %></td>
        
    </tr>
    